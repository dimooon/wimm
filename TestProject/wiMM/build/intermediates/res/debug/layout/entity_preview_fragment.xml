<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dip" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/icon"
            android:layout_width="100dip"
            android:layout_height="100dip"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="6dip"
            android:scaleType="fitXY"
            android:src="@drawable/ic_launcher" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:visibility="visible" >

            <View
                android:id="@+id/stub"
                android:layout_width="100dip"
                android:layout_height="100dip"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:layout_marginRight="6dip"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/thirdLine"
                android:layout_width="fill_parent"
                android:layout_height="26dip"
                android:layout_above="@id/secondLine"
                android:layout_toRightOf="@+id/stub"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="Description "
                android:textSize="12sp" />

            <TextView
                android:id="@+id/fourthLine"
                android:layout_width="fill_parent"
                android:layout_height="26dip"
                android:layout_above="@id/thirdLine"
                android:layout_toRightOf="@+id/stub"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="Description "
                android:textSize="12sp" />

            <TextView
                android:id="@+id/firstLine"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_above="@id/fourthLine"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_alignWithParentIfMissing="true"
                android:layout_toRightOf="@id/stub"
                android:gravity="center_vertical"
                android:text="Example application"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/secondLine"
                android:layout_width="fill_parent"
                android:layout_height="26dip"
                android:layout_alignBottom="@+id/stub"
                android:layout_toRightOf="@+id/stub"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="Description "
                android:textSize="12sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <View
                android:id="@+id/stub"
                android:layout_width="100dip"
                android:layout_height="100dip"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:layout_marginRight="6dip"
                android:visibility="invisible" />

            <EditText
                android:id="@+id/secondLine_edit"
                android:layout_width="fill_parent"
                android:layout_height="26dip"
                android:layout_alignBottom="@+id/stub"
                android:layout_toRightOf="@+id/stub"
                android:ellipsize="end"
                android:singleLine="true"
                android:textSize="12sp"
                android:visibility="invisible" />

            <EditText
                android:id="@+id/thirdLine_edit"
                android:layout_width="fill_parent"
                android:layout_height="26dip"
                android:layout_above="@id/secondLine_edit"
                android:layout_toRightOf="@+id/stub"
                android:ellipsize="end"
                android:singleLine="true"
                android:textSize="12sp"
                android:visibility="invisible" />

            <EditText
                android:id="@+id/fourthLine_edit"
                android:layout_width="fill_parent"
                android:layout_height="26dip"
                android:layout_above="@id/thirdLine_edit"
                android:layout_toRightOf="@+id/stub"
                android:ellipsize="end"
                android:singleLine="true"
                android:textSize="12sp"
                android:visibility="invisible" />

            <EditText
                android:id="@+id/firstLine_edit"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_above="@id/fourthLine_edit"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_alignWithParentIfMissing="true"
                android:layout_toRightOf="@id/stub"
                android:gravity="center_vertical"
                android:textSize="16sp"
                android:visibility="invisible" />
        </RelativeLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/entity_description_additional_info"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

</LinearLayout><!-- From: file:/home/dimooon/WhereIsMyMoney/TestProject/wiMM/src/main/res/layout/entity_preview_fragment.xml -->